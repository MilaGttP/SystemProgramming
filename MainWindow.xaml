<Window x:Class="SystemProgramming.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SystemProgramming"
        mc:Ignorable="d"
        Title="MainWindow" Height="950" Width="1450" WindowStartupLocation="CenterScreen" Background="#212121">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.4*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <StackPanel Orientation="Vertical" Background="#313131">
            
            <Expander Margin="0 20 0 0"  Header="Start" Foreground="Azure" HorizontalContentAlignment="Center">

            </Expander>

            <Expander Margin="0 10 0 0"  Header="Start" Foreground="Azure" HorizontalContentAlignment="Center">
            </Expander>
            
        </StackPanel>

    </Grid>
</Window>
